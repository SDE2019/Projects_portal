@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Project Progress Management System</h2>
    <p class="lead">This application helps teachers to monitor the different phases of students’ project, award marks at each phase and view their reports</p>
    <p><a href="~/Home/About" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
    <!--<p class="btn btn-primary btn-lg">
            @Html.ActionLink("Learn more", "About")
    </p>-->
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Student</h2>
        <p>
            Make a new Student entry. Enter the Student details along with the team number that
            the student belongs to, to keep track of the progress of the ongoing project.
        </p>
        <p><a class="btn btn-default" href="~/Students/Create">Student Entry &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Teacher</h2>
        <p>
            Login for Teachers of every department using their IDs.
        </p>
        <p><a class="btn btn-default" href="~/Teachers/Create">Teacher Entry &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Project</h2>
        <p>
            Everytime a new project is initiated the entry is to be made here!
            Enter the project details, teacher incharge and students involved.
        </p>
        <p><a class="btn btn-default" href="~/Projects/Create">Project Entry &raquo;</a></p>
    </div>
</div>